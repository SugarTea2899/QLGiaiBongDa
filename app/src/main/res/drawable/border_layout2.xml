    <item>
        <shape android:shape="rectangle">
            <solid android:color="#6D9E9E9E"/>
            <corners android:radius="20dp" />
        </shape>
    </item>

    <item
        android:left="2dp"
        android:right="2dp"
        android:top="5dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>