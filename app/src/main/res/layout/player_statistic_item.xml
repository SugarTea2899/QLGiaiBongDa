<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="80dp"
    android:weightSum="10">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:padding="10dp">
        <TextView
            android:id="@+id/numberPlayerStatistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:padding="10dp">
        <TextView
            android:id="@+id/namePlayerStatistic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jamie Vardy"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_marginBottom="5dp"/>
        <ImageView
            android:id="@+id/imageClubStatistic"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/manutd"
            android:scaleType="fitXY"
            android:layout_below="@id/namePlayerStatistic"
            android:layout_marginEnd="5dp"/>
        <TextView
            android:id="@+id/nameClubStatistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manchester United"
            android:layout_toEndOf="@id/imageClubStatistic"
            android:layout_below="@id/namePlayerStatistic"
            android:textSize="18sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:padding="10dp">
        <TextView
            android:id="@+id/numberGoalsStatistic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</LinearLayout>