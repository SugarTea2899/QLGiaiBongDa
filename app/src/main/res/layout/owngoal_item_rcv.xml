<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="210dp"
    android:layout_margin="10dp"
    android:background="@drawable/grey_border">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/colorRed900">
        <ImageView
            android:id="@+id/football_ball"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_football_ball"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/vaoText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BÀN PHẢN LƯỚI NHÀ"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="#ffffff"
            android:layout_below="@id/football_ball"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/minuteOfMatch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Title"
            android:textColor="#ffffff"
            android:layout_below="@id/vaoText"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/title" >
        <TextView
            android:id="@+id/namePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
        <TextView
            android:id="@+id/nameClub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/namePlayer"/>
        <TextView
            android:id="@+id/typeGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bàn thắng phản lưới"
            android:layout_below="@id/nameClub"
            android:textColor="@color/colorRed900"
            android:layout_marginTop="5dp"/>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageOfPlayer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</RelativeLayout>