<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RankingActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarRankingActivity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <include
            android:id="@+id/toolBarRankingActivity"
            layout="@layout/appbar_1" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/scrollStatisticLeague"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/appbarRankingActivity"
        android:padding="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@drawable/grey_background_radius"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5.5"
                    android:text="Câu lạc bộ"
                    style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="ĐĐ"
                        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="HS"
                        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Đ"
                        style="@style/TextAppearance.AppCompat.SearchResult.Subtitle"/>
                </RelativeLayout>
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvRanking"
                android:layout_width="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>