<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <include
            android:id="@+id/toolBar1"
            layout="@layout/appbar_1" />

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/appbar"
        android:layout_height="140dp"

        android:background="@drawable/border_layout1"
        >
    </RelativeLayout>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cvPlayer"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/ed0ba0_x4aa_ony"
        app:civ_border_color="#ffffff"
        app:civ_border_width="4dp" />

    <LinearLayout
        android:layout_toRightOf="@id/cvPlayer"
        android:layout_width="wrap_content"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPlayerNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cristiano Ronaldo"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_marginTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivTeamLogo"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/image_28"
                />
            <TextView
                android:id="@+id/tvTeam"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:textSize="14dp"
                android:layout_height="wrap_content"
                android:text="Manchester United"
                android:textColor="#ffffff"
                android:textStyle="italic"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:paddingLeft="18dp"
        android:paddingRight="8dp"
        android:layout_below="@id/cvPlayer"
        android:paddingBottom="15dp"
        android:layout_width="match_parent"
        android:background="@drawable/border_layout2"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line_text"
            android:paddingBottom="10dp"
            android:text="Thông tin chi tiết"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/line_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Ngày sinh"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvDOB"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="02/08/1999"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/line_text"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quốc tịch"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvNationality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Portugal"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/line_text"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn thắng"
                android:textColor="#000000"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tvGoal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="10"
                android:textColor="#000000"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/line_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kiến tạo"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvAssist"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:textSize="16dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="0"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/line_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:text="Thẻ vàng"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvYellowCard"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textStyle="bold"
                android:text="0"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/line_text"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thẻ đỏ"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/tvRedCard"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="0"
                android:textColor="#000000"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btnMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/menu_icon"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"/>

    <ImageButton
        android:id="@+id/btnRemovePlayer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_above="@+id/btnMenu"
        android:layout_marginBottom="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:visibility="gone"
        android:background="@android:color/transparent"
        android:src="@drawable/remove_icon"/>

    <ImageButton
        android:id="@+id/btnEditPlayer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_above="@+id/btnRemovePlayer"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:background="@android:color/transparent"
        android:src="@drawable/eidt_icon"/>


</RelativeLayout>