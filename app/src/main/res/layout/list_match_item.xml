<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:weightSum="3"
    android:layout_margin="10dp"
    android:background="@color/colorWhite">

    <RelativeLayout
        android:id="@+id/infoOfAMatch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal|center_vertical">

        <LinearLayout
            android:id="@+id/homeClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/logoHomeClub"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/manutd"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/nameHomeClub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="Manchester United"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/goalsHomeClub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="3"
                android:textSize="14sp"
                android:layout_gravity="end|center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/guestClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_below="@id/homeClub">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/logoGuestClub"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/manutd"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/nameGuestClub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2.5"
                android:text="Manchester United"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"/>

            <TextView
                android:id="@+id/goalsGuestClub"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="3"
                android:textSize="14sp"
                android:layout_gravity="end|center_vertical"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/stateAndTimeMatch"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/darker_gray" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true">
            <TextView
                android:id="@+id/stateOfMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KT"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/timeOfMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Th2, 20/7"
                android:textSize="14sp"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>