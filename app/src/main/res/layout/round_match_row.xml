<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <TextView
        android:id="@+id/matchTimeInfoText"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:layout_centerInParent="true"
        android:textAlignment="center"
        android:textSize="15sp"
        android:background="@drawable/grey_border"
        android:text="88:88 88/8" />

    <ImageButton
        android:id="@+id/homeTeamLogoImage"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:src="@drawable/ic_premier_league"
        android:background="@color/colorTransparent"
        android:layout_toLeftOf="@id/matchTimeInfoText"/>

    <ImageButton
        android:id="@+id/awayTeamLogoImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/colorTransparent"

        android:src="@drawable/ic_premier_league"
        android:layout_toRightOf="@id/matchTimeInfoText"/>
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toRightOf="@id/awayTeamLogoImage"
        android:id="@+id/awayTeamNameText"
        android:text="Man City"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />
    <TextView
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_toLeftOf="@id/homeTeamLogoImage"
        android:id="@+id/homeTeamNameText"
        android:text="Man City"
        android:textAlignment="center"
        android:gravity="center_vertical"
        />

    <ImageButton
        android:id="@+id/matchMoreInfoImage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorTransparent"
        android:src="@drawable/ic_more_info"
        android:clickable="true"/>



</RelativeLayout>