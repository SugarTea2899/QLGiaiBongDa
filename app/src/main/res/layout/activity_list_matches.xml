<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ListMatchesActivity"
    android:background="@color/colorGrey200">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarListMatches"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <include
            android:id="@+id/toolBar3"
            layout="@layout/appbar_1" />

    </com.google.android.material.appbar.AppBarLayout>

    <Spinner
        android:id="@+id/roundSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:spinnerMode="dropdown"
        android:layout_below="@id/appbarListMatches"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/listMatches"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/roundSpinner" />

</RelativeLayout>